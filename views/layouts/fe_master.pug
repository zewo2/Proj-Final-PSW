html(lang="pt")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= title || 'Ginásio Fitness'
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet")
    style.
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background-color: #f8f9fa;
      }
      .navbar-custom {
        background-color: #343a40;
      }
      .content-wrapper {
        flex: 1;
        padding: 20px;
      }
      footer {
        border-top: 1px solid #dee2e6;
        padding: 15px 0;
        background-color: #f8f9fa;
      }

  body
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-dark.navbar-custom
      div.container
        a.navbar-brand(href="/") 
          i.bi.bi-activity.me-2
          | Ginásio Fitness
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        div.collapse.navbar-collapse#navbarNav
          ul.navbar-nav.me-auto
            li.nav-item
              a.nav-link(href="/clientes") 
                i.bi.bi-people-fill.me-1
                | Clientes
            li.nav-item
              a.nav-link(href="/funcionarios") 
                i.bi.bi-person-badge.me-1
                | Funcionários
            li.nav-item
              a.nav-link(href="/ptrainers") 
                i.bi.bi-activity.me-1
                | P. Trainers
            li.nav-item
              a.nav-link(href="/subscricoes") 
                i.bi.bi-card-list.me-1
                | Subscrições

    // Main content
    div.content-wrapper
      div.container
        block content

    // Footer
    footer
      div.container.text-center
        p.mb-0 &copy; 2025 Ginásio Fitness. Todos os direitos reservados.

    // Scripts
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    block scripts