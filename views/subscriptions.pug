html
  head
    title= title
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet")
    style.
      body {
        padding: 20px;
        background-color: #f8f9fa;
      }
      .table-container {
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        margin-bottom: 20px;
      }
      h1 {
        margin-bottom: 20px;
        color: #343a40;
      }
      .action-btns {
        white-space: nowrap;
      }
      .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
      }

  body
    div.container
      h1.display-4= title

      div.table-container
        div.d-flex.justify-content-between.mb-3
          a.btn.btn-primary(href="/") 
            i.bi.bi-arrow-left
            |  Voltar à Página Inicial
          button.btn.btn-success(type="button" data-bs-toggle="modal" data-bs-target="#createModal")
            i.bi.bi-plus-lg
            |  Adicionar Subscrição

        table.table.table-striped.table-hover
          thead.table-dark
            tr
              th ID
              th Nome
              th Descrição
              th Mensalidade
              th Features
              th Ações
          tbody
            each subscription_tier in subscription_tiers
              tr
                td= subscription_tier.id
                td= subscription_tier.name
                td= subscription_tier.description
                td= subscription_tier.monthly_price
                td= subscription_tier.features
                td.action-btns
                  button.btn.btn-sm.btn-warning.me-1(type="button" data-bs-toggle="modal" data-bs-target=`#editModal${subscription_tier.id}`)
                    i.bi.bi-pencil
                  button.btn.btn-sm.btn-danger(type="button" data-bs-toggle="modal" data-bs-target=`#deleteModal${subscription_tier.id}`)
                    i.bi.bi-trash

    // Create Subscription Modal
    div.modal.fade(id="createModal" tabindex="-1" aria-hidden="true")
      div.modal-dialog
        div.modal-content
          div.modal-header
            h5.modal-title Adicionar Nova Subscrição
            button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Close")
          div.modal-body
            form#createForm
              div.mb-3
                label.form-label(for="name") Nome
                input.form-control(type="text" id="name" name="name" required)
              div.mb-3
                label.form-label(for="description") Descrição
                textarea.form-control(id="description" name="description" rows="3")
              div.mb-3
                label.form-label(for="monthly_price") Mensalidade (€)
                input.form-control(type="number" step="0.01" id="monthly_price" name="monthly_price" required)
              div.mb-3
                label.form-label(for="features") Features (separadas por vírgula)
                textarea.form-control(id="features" name="features" rows="3")
          div.modal-footer
            button.btn.btn-secondary(type="button" data-bs-dismiss="modal") Cancelar
            button.btn.btn-primary(type="button" id="submitCreateForm") Guardar

    // Edit and Delete Modals for each subscription
    each subscription_tier in subscription_tiers
      // Edit Modal
      div.modal.fade(id=`editModal${subscription_tier.id}` tabindex="-1" aria-hidden="true")
        div.modal-dialog
          div.modal-content
            div.modal-header
              h5.modal-title Editar Subscrição #{subscription_tier.name}
              button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Close")
            div.modal-body
              form(id=`editForm${subscription_tier.id}`)
                input(type="hidden" name="_method" value="PUT")
                div.mb-3
                  label.form-label(for=`editName${subscription_tier.id}`) Nome
                  input.form-control(type="text" id=`editName${subscription_tier.id}` name="name" value=subscription_tier.name required)
                div.mb-3
                  label.form-label(for=`editDescription${subscription_tier.id}`) Descrição
                  textarea.form-control(id=`editDescription${subscription_tier.id}` name="description" rows="3")= subscription_tier.description
                div.mb-3
                  label.form-label(for=`editMonthlyPrice${subscription_tier.id}`) Mensalidade (€)
                  input.form-control(type="number" step="0.01" id=`editMonthlyPrice${subscription_tier.id}` name="monthly_price" value=subscription_tier.monthly_price required)
                div.mb-3
                  label.form-label(for=`editFeatures${subscription_tier.id}`) Features (separadas por vírgula)
                  textarea.form-control(id=`editFeatures${subscription_tier.id}` name="features" rows="3")= subscription_tier.features
            div.modal-footer
              button.btn.btn-secondary(type="button" data-bs-dismiss="modal") Cancelar
              button.btn.btn-primary(type="button" id=`submitEditForm${subscription_tier.id}`) Atualizar

      // Delete Modal
      div.modal.fade(id=`deleteModal${subscription_tier.id}` tabindex="-1" aria-hidden="true")
        div.modal-dialog
          div.modal-content
            div.modal-header
              h5.modal-title Confirmar Eliminação
              button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Close")
            div.modal-body
              p Tem a certeza que deseja eliminar a subscrição #{subscription_tier.name}?
              form(id=`deleteForm${subscription_tier.id}`)
                input(type="hidden" name="_method" value="DELETE")
            div.modal-footer
              button.btn.btn-secondary(type="button" data-bs-dismiss="modal") Cancelar
              button.btn.btn-danger(type="button" id=`submitDeleteForm${subscription_tier.id}`) Eliminar

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script.
      document.addEventListener('DOMContentLoaded', function() {
        // Handle create form submission
        const submitCreateBtn = document.getElementById('submitCreateForm');
        if (submitCreateBtn) {
          submitCreateBtn.addEventListener('click', function() {
            const formData = {
              name: document.getElementById('name').value,
              description: document.getElementById('description').value,
              monthly_price: document.getElementById('monthly_price').value,
              features: document.getElementById('features').value
            };

            fetch('/subscricoes', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(formData)
            })
            .then(response => {
              if (response.ok) {
                bootstrap.Modal.getInstance(document.getElementById('createModal')).hide();
                location.reload();
              } else {
                throw new Error('Create failed');
              }
            })
            .catch(error => {
              console.error('Error:', error);
              alert('Falha ao criar subscrição');
            });
          });
        }

        // Handle edit forms
        document.querySelectorAll('[id^="editForm"]').forEach(form => {
          const id = form.id.replace('editForm', '');
          const submitBtn = document.getElementById(`submitEditForm${id}`);
          
          if (submitBtn) {
            submitBtn.addEventListener('click', function() {
              const formData = {
                name: document.getElementById(`editName${id}`).value,
                description: document.getElementById(`editDescription${id}`).value,
                monthly_price: document.getElementById(`editMonthlyPrice${id}`).value,
                features: document.getElementById(`editFeatures${id}`).value
              };

              fetch(`/subscricoes/${id}`, {
                method: 'PUT',
                headers: {
                  'Content-Type': 'application/json',
                },
                body: JSON.stringify(formData)
              })
              .then(response => {
                if (response.ok) {
                  bootstrap.Modal.getInstance(document.getElementById(`editModal${id}`)).hide();
                  location.reload();
                } else {
                  throw new Error('Update failed');
                }
              })
              .catch(error => {
                console.error('Error:', error);
                alert('Falha ao atualizar subscrição');
              });
            });
          }
        });

        // Handle delete forms
        document.querySelectorAll('[id^="deleteForm"]').forEach(form => {
          const id = form.id.replace('deleteForm', '');
          const submitBtn = document.getElementById(`submitDeleteForm${id}`);
          
          if (submitBtn) {
            submitBtn.addEventListener('click', function() {
              fetch(`/subscricoes/${id}`, {
                method: 'DELETE',
                headers: {
                  'Content-Type': 'application/json',
                }
              })
              .then(response => {
                if (response.ok) {
                  bootstrap.Modal.getInstance(document.getElementById(`deleteModal${id}`)).hide();
                  location.reload();
                } else {
                  throw new Error('Delete failed');
                }
              })
              .catch(error => {
                console.error('Error:', error);
                alert('Falha ao eliminar subscrição');
              });
            });
          }
        });
      });