html
  head
    title= title
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
    style.
      body {
        padding: 20px;
        background-color: #f8f9fa;
      }
      .table-container {
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
      }
      h1 {
        margin-bottom: 20px;
        color: #343a40;
      }
      .action-btns {
        white-space: nowrap;
      }

  body
    div.container
      h1= title

      div.table-container
        table.table.table-striped.table-hover
          thead.table-dark
            tr
              th ID
              th Nome
              th Descrição
              th Mensalidade
              th Features
          tbody
            each subscription_tier in subscription_tiers
              tr
                td= subscription_tier.id
                td= subscription_tier.nome
                td= subscription_tier.description
                td= subscription_tier.monthly_price
                td= subscription_tier.features


      br
      a.btn.btn-secondary(href="/") Voltar à Página Inicial

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")